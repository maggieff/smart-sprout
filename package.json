{
  "name": "smart-sprout",
  "version": "1.0.0",
  "description": "Smart Plant Tracker with AI and IoT",
  "scripts": {
    "start": "node scripts/startDemo.js",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && PORT=5001 node server.js",
    "backend:https": "cd backend && PORT=5001 node server-https.js",
    "frontend": "cd frontend && npm start",
    "start:https": "concurrently \"npm run backend:https\" \"npm run frontend:https\"",
    "frontend:https": "cd frontend && HTTPS=true npm start"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "https-localhost": "^4.7.1",
    "selfsigned": "^3.0.1"
  }
}
